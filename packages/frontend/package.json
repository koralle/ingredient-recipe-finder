{
  "name": "@ingredient-recipe-finder/frontend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev --port 3000",
    "build": "vite build",
    "serve": "vite preview",
    "test": "vitest run",
    "deploy": "bun run build && wrangler deploy",
    "preview": "bun run build && vite preview",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "check": "biome check",
    "check:ci": "biome ci",
    "check:fix": "biome check --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "bun wrangler d1 migrations apply ingredient-recipe-finder --local",
    "db:migrate:prod": "NODE_ENV=production bun dotenvx run -f .env.development drizzle-kit migrate"
  },
  "dependencies": {
    "@cloudflare/vite-plugin": "^1.13.8",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/react-router-ssr-query": "^1.131.7",
    "@tanstack/react-start": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "@t3-oss/env-core": "^0.13.10",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.3",
    "lucide-react": "^0.544.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "tailwindcss": "^4.0.6",
    "valibot": "^1.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "catalog:",
    "@dotenvx/dotenvx": "^1.51.2",
    "@ingredient-recipe-finder/schema": "workspace:*",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@typescript/native-preview": "catalog:",
    "@vitejs/plugin-react": "^5.0.4",
    "drizzle-kit": "^0.31.8",
    "jsdom": "^27.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "web-vitals": "^5.1.0",
    "wrangler": "^4.54.0"
  }
}
