{
  "name": "@ingredient-recipe-finder/api",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy --minify",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "check": "biome check .",
    "check:ci": "biome ci",
    "fix": "biome check --fix",
    "db:generate": "drizzle-kit generate",
    "db:migrate:dev": "bun wrangler d1 migrations apply ingredient-recipe-finder --local",
    "db:migrate:prod": "NODE_ENV=production bun dotenvx run -f .env.development drizzle-kit migrate"
  },
  "dependencies": {
    "@t3-oss/env-core": "^0.13.10",
    "better-sqlite3": "^11.7.0",
    "drizzle-orm": "^0.45.1",
    "hono": "4.11.3",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@dotenvx/dotenvx": "^1.51.2",
    "@ingredient-recipe-finder/schema": "workspace:*",
    "@tsconfig/strictest": "^2.0.8",
    "@types/better-sqlite3": "^7.6.12",
    "@types/bun": "^1.3.5",
    "@types/node": "^25.0.3",
    "@typescript/native-preview": "catalog:",
    "drizzle-kit": "^0.31.8",
    "wrangler": "^4.54.0"
  }
}
